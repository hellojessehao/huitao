<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_radius_4"
    android:paddingTop="@dimen/dp_20"
    android:paddingBottom="14dp"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_10"
    >

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示"
        android:textColor="@color/color_maintext_title"
        android:textSize="@dimen/sp_16"
        />

    <TextView
        android:id="@+id/tv_hint_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定要删除该课件？
删除后，课件将无法恢复！"
        android:textColor="@color/color_maintext_title"
        android:textSize="@dimen/sp_14"
        android:layout_below="@id/tv_hint"
        android:layout_marginTop="@dimen/dp_20"
        />

    <TextView
        android:id="@+id/tv_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hint_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_alignParentEnd="true"
        android:text="去登录"
        android:textColor="@color/color_selected_tags"
        android:padding="@dimen/dp_5"
        android:textSize="@dimen/sp_16"
        />

    <TextView
        android:id="@+id/tv_negative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/tv_positive"
        android:layout_marginEnd="27dp"
        android:text="下次登录"
        android:padding="@dimen/dp_5"
        android:textSize="@dimen/sp_16"
        android:layout_below="@id/tv_hint_content"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/color_subtext_subtitle"
        />

</RelativeLayout>