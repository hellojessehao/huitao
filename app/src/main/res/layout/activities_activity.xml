<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_white_titlebar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:text="   惠省淘双11拉新活动重磅启动："
        android:textColor="@color/red"
        android:textSize="@dimen/sp_16"
        />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:text="@string/double_11_activity_desc"
        android:textColor="@color/color_selected_tags"
        android:textSize="@dimen/sp_14"
        android:lineSpacingMultiplier="2"
        android:background="@drawable/bg_white_stroke1_radius4"
        android:padding="@dimen/dp_10"
        android:textIsSelectable="true"
        />

</LinearLayout>